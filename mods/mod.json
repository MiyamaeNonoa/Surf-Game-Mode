{
	"Name" : "Berdox.surf_gamemode",
	"Description": "Adds Surf Game Mode",
	"Version": "1.1.0",
	"LoadPriority": 1,
	"RequiredOnClient": false,
	
	"Scripts": [
		{
            "Path": "gamemodes/sv_gamemode_surf.nut",
            "RunOn": "(SERVER || CLIENT) && MP",
            "ServerCallback": {
                "Before": "SURFMode_Init"
            },
            "ClientCallback": {
                "Before": "SURFMode_Init"
            }
        },
		{
            "Path": "gamemodes/_gamemode_surf.nut",
            "RunOn": "SERVER && MP",
		 "ServerCallback": {
        		"Destroy": "SURF_DestroyCallback"
    		}
        },
		{
            "Path": "sv_not_surf.nut",
            "RunOn": "SERVER && MP",
		 "ServerCallback": {
        		"After": "Check_Map_For_Surf"
    		}
        }
	],
	"Localisation": [
        "resource/surf_%language%.txt"
    ]
}